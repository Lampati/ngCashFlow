{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },

  "headers": [  {
    // don't cache service worker
    "source" : "**",
    "headers" : [ {
      "key" : "cache-control",
      "value" : "max-age=0"
    } ]
  } ]
}
